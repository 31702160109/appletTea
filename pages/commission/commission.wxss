page{
    width: 100%;
    height: 100%;
    background-color: #fadfba;
}

/* 背景图 */
.bg{
    width: 100%;
    height: 100%;
}
.bg image{
    width: 100%;
    height: 100%;
    z-index: -1;
}

.box{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

/* 顶部  佣金记录 */
.mainTop{
    display: flex;
    padding: 18rpx 15rpx 0 15rpx;
    font-size: 26rpx;
}
.mainTop .topItem1{
    width: 200rpx;
    display: flex;
    flex: 1;
    padding-top: 5rpx;
    padding-left: 35rpx;
}
.mainTop .topItem2{
    display: flex;
    flex: 1;
    padding-left: 70rpx;
}
.mainTop .topItem3{
    display: flex;
    flex: 1;
    padding-top: 7rpx;
    padding-left: 20rpx;
}
.mainTop image{
    margin: 0 5rpx;
    width: 40rpx;
    height: 48rpx;
}




/* 商品 */
.OrderShop{
    width: 100%;
    position: relative;
    left: 0;
}
.shopItem{
    position: relative;
}
.shopBg{
    padding: 10rpx 10rpx 0 10rpx;
}
.shopBg image{
    width: 100%;
    height: 200rpx;
}
/* 商品内容 */
.shopContent{
    width: 92%;
    position: absolute;
    top: 13rpx;
    left: 4%;
    right: 4%;
}
.shopContent .shopTitle{
    width: 100%;
    padding-bottom: 10rpx;
    padding-left: 10rpx;
    margin-bottom: 10rpx;
    border-bottom: 1rpx solid #000000;
    overflow: hidden;
}
.shopTitle text{
    font-size: 20rpx;
}
.shopTitle .orderNumber{
    float: left;
}
.shopTitle .shopStatus{
    float: right;
}
/* 商品详情参数 */
.shopContent .shopDetails{
    width: 100%;
    height: 180rpx;
    margin: 15rpx 0 7rpx 0;
}
/* 商品左 */
.shopDetails .shopLeft{
    float: left;
    width: 28%;
    margin-right: 4%;
}
.shopDetails .shopLeft image{
    width: 100%;
    height: 164rpx;
}
/* 商品右 */
.shopDetails .shopRight{
    float: right;
    width: 68%;
    height: 99rpx;
}
.shopRight .shopRightTop{
    width: 100%;
    font-family: monospace, 'Courier New', Courier;
}
.shopRightTop .shopRightTitle{
    display: block;
    font-size: 24rpx;
}
.shopRightTop .shopRightSize{
    margin-top: 15rpx;
    font-size: 20rpx;
}
.shopRightTop .shopRightSize text{
    color: red;
}

.shopRightBottom{
    position: absolute;
    bottom: 18rpx;
    font-size: 20rpx;
}
.RMB,.moneyNumber1,.moneyNumber2{
    color: red; 
}
.moneyNumber2{
    font-weight: bold;
    font-size: 28rpx;
}
.p30{
    padding-right: 30rpx;
}

/* 佣金统计 */
.commissionSum{
    height: 55rpx;
    line-height: 55rpx;
    position: relative;
    top: 20rpx;
    margin: 0 20rpx;
    padding: 5rpx 15rpx;
    border-top: 2rpx solid #000000;
}
.positRight{
    position: absolute;
    right: 20rpx;
    font-size: 30rpx;
}
.positRight text{
    font-size: 32rpx;
    color: red;
    font-weight: bold;
}
.positRight .RMB{
    font-size: 20rpx;
    color: red;
}
