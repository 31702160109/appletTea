page{
    width: 100%;
    height: 100%;
}

/* 背景图 */
.bg{
    width: 100%;
    height: 100%;
}
.bg image{
    width: 100%;
    height: 100%;
    z-index: -1;
}

.box{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.shopBg image{
    width: 100%;
    height: 910rpx;
}

.shopBox{
    width: 100%;
    height: 910rpx;
    position: absolute;
    top: 0;
    left: 0;
}

/* 轮播图 */
.banner{
    width: 100%;
    height: 640rpx;
    z-index: 2;
}
.banner .banner-img{
    /* width: 100%; */
    width: 750rpx;
    height: 640rpx;
}

/* 商品标题 */
.shopTitle{
    width: 100%;
    padding: 15rpx;
    font-size: 32rpx;
}
.shopPrice{
    width: 100%;
    padding: 5rpx 5rpx 0 5rpx;
    font-size: 20rpx;
    color: red;
    margin-left: 30rpx;
    font-style: oblique;
}
.priceSection01,.priceSection02,.priceSection03{
    font-family: Arial, Helvetica, sans-serif;
    font-size: 42rpx;
}
.shopOldPrice{
    width: 100%;
    margin-left: 30rpx;
    font-size: 22rpx;
    color: #9f9e9d;
    font-style: oblique;
}
.OldPrice01,.OldPrice02,.OldPrice03{
    font-size: 28rpx;
    text-decoration: line-through;
}

/* 商品参数 */
.shopParm{
    width: 100%;
    margin-top: 17rpx;
    padding: 15rpx;
    font-size: 22rpx;
    color: #9f9e9d;
    font-style: oblique;
}

/* 规格参数 */
.shopParmLeft{
    float: left;
    width: 200rpx;
    text-align: center;
    margin-top: 3rpx;
}
.shopParmLeft .select{
    font-size: 32rpx;
    padding: 0 10rpx 10rpx 0;
}
.shopParmLeft .parm{
    padding: 0 15rpx;
}
.shopParmRight{
    float: right;
    width: 140rpx;
    padding: 10rpx;
}
.parmItemBox{
    width: 360rpx;
    display: flex;
    margin-top: 6rpx;
    padding-left: 20rpx;
}
.parmItemBox .parmItem{
    flex: 1;
    width: 40rpx;
    height: 40rpx;
    margin: 0 10rpx;
    background-color: #f5c895;
    border-radius: 10rpx;
}
/* 库存量、运费 */
.shopBottom{
    font-size: 20rpx;
    color: #9f9e9d;
    margin: 4rpx 40rpx 0;
}
.shopBottomLeft{
    float: left;
}
.shopBottomRight{
    float: right;
}
.colorRed{
    color: red;
}

/* 详情 评论 */
.shopDetailsBox{
    width: 100%;
    position: absolute;
    top: 940rpx;
}
.detailsBg image{
    width: 100%;
    height: 53rpx;
}
.shopDetailsBtn{
    width: 100%;
    position: absolute;
    line-height: 60rpx;
    top: 0;
    display: flex;
}
.shopBtnItem{
    width: 350rpx;
    flex: 1;
    text-align: center;
    font-size: 22rpx;
    color: #9f9e9d;
    font-style: oblique;
}
.detailBtn{
    color: #111;
}

/* 商品内容 */
.detailsContent{
    width: 100%;
}
.detailsContent image{
    width: 100%;
}

/* 底部导航 */
.tabBar{
    width: 100%;
    height: 80rpx;
    background-color: #FFF;
    position: fixed;
    left: 0;
    bottom: 0;
}
/* TabBar左边 */
.tabBarLeft{
    float: left;
    width: 40%;
    height: 80rpx;
    display: flex
}
.tabBarLeftItem text{
    font-size: 20rpx;
    color: red;
}
.tabBarLeftItem .index-icon{
    width: 44rpx;
    height: 38rpx;
}
.tabBarLeftItem .link-icon{
    width: 38rpx;
    height: 34rpx;
}

.tabBarLeftItem,.tabBarRightItem{
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
/* tabbar右边 */
.tabBarRight{
    float: right;
    width: 60%;
    height: 80rpx;
    display: flex;
}
.tabBarRighDetails,.tabBarRighBuy{
    color: #FFF;
    font-size: 32rpx;
    font-style: oblique;
    padding-bottom: 5rpx;
}
.tabBarRighDetails{
    background-color: #ed5b57;
}
.tabBarRighBuy{
    background-color: #f5c895;
}
